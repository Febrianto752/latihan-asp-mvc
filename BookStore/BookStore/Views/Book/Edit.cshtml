@model BookStore.Models.Book;

@{
    var authors = ViewData["authors"] as ICollection<BookStore.Models.Author>;
    Layout = "_Layout";
    ViewData["Title"] = "Edit Book";
}

<a asp-action="Index" class="btn btn-info btn-sm mb-5">&laquo; Back to list</a>

<h1>Edit Author Form</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Guid" />
            <div class="mb-3">
                <label class="form-label" asp-for="Title">Title</label>
                <input class="form-control" asp-for="Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="AuthorGuid">Author</label>
                <select class="form-select" asp-for="AuthorGuid">
                    @foreach (var author in authors)
                    {
                        <option value="@(author.Guid)">@(author.Name)</option>
                    }
                </select>
                <span asp-validation-for="AuthorGuid" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Quota">Quota</label>
                <input type="number" class="form-control" asp-for="Quota">
                <span asp-validation-for="Quota" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Price">Price</label>
                <input type="number" class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

