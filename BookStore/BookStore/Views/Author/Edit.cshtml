@model BookStore.Models.Author;

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Author";
}

<a asp-action="Index" class="btn btn-info btn-sm mb-5">&laquo; Back to list</a>

<h1>Edit Author Form</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Guid" />
            <div class="mb-3">
                <label class="form-label" asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name">
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Age">Age</label>
                <input type="number" class="form-control" asp-for="Age">
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

