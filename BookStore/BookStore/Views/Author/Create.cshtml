@model BookStore.Models.Author;

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Author";
}

<h1>Create Author Form</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name">
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Age">Age</label>
                <input type="number" class="form-control" asp-for="Age">
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-info btn-sm">&laquo; Back to list</a>
